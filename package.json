{
  "name": "vscode-theme-editor",
  "description": "Desktop app for editing VS Code theme JSON files",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "clean": "rm -rf dist release",
    "preview": "vite preview",
    "package": "npm run clean && npm run build && electron-builder",
    "test": "vitest --run",
    "test:ui": "vitest --ui --run",
    "test:coverage": "vitest --coverage --run",
    "lint": "biome lint src/",
    "format": "biome format src/ --write",
    "check": "biome check src/ --write",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "vite-plugin-electron": "^0.29.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.16",
    "@types/color": "^4.2.0",
    "@types/node": "^24.9.1",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^4.0.3",
    "@vitest/ui": "^4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "color": "^5.0.2",
    "concurrently": "^9.2.1",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "jsdom": "^27.0.1",
    "lucide-react": "^0.547.0",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react-router-dom": "^7.9.4",
    "shadcn": "^3.5.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.1.14",
    "vitest": "^4.0.3"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.14"
  },
  "build": {
    "appId": "com.antoniocolagreco.vscode-theme-editor",
    "productName": "VS Code Theme Editor",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "!node_modules/**/*"
    ],
    "asarUnpack": [],
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Development"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  }
}